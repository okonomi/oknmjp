---
import BaseHead from "@/components/BaseHead.astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"

type Props = {
  title: string
  description: string
  pageType: "website" | "article"
}

const { title, description, pageType } = Astro.props
---

<html lang="ja">
  <head>
    <BaseHead title={title} description={description} pageType={pageType} />
  </head>
  <body>
    <div class="w-full max-w-3xl px-4 mx-auto">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
